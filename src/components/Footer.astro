---
import { useTranslations } from "../i18n/utils";

interface Props {
  lang: string;
}

const { lang } = Astro.props;
const t = useTranslations(lang as any);
const year = new Date().getFullYear();
---

<footer class="border-t border-border bg-muted/30 py-8 mt-auto">
  <div
    class="container mx-auto px-4 flex flex-col md:flex-row items-center justify-between gap-4"
  >
    <div class="text-sm text-muted-foreground">
      &copy; {year} MD Editor. {t("footer.rights")}
    </div>

    <div class="flex items-center gap-6 text-sm text-muted-foreground">
      <a
        href={`/${lang}/privacy`}
        class="hover:text-foreground transition-colors">{t("footer.privacy")}</a
      >
      <a href={`/${lang}/terms`} class="hover:text-foreground transition-colors"
        >{t("footer.terms")}</a
      >
      <a
        href="mailto:contact@example.com"
        class="hover:text-foreground transition-colors">{t("footer.contact")}</a
      >
    </div>
  </div>
</footer>
