---
import "../styles/global.css";
import { useTranslations } from "../i18n/utils";

interface Props {
  title: string;
  lang: "en" | "pt" | "es";
}

const { title, lang } = Astro.props;
const t = useTranslations(lang);
---

<!doctype html>
<html lang={lang} class:list={[{ dark: false }]}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={t("site.description")} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;700&display=swap"
      rel="stylesheet"
    />

    <title>{t("site.title")}</title>

    <!-- AdSense Script (Commented until approval) -->
    <!-- 
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-YOUR_ID_HERE"
     crossorigin="anonymous"></script> 
    -->
  </head>
  <body
    class="min-h-screen bg-background text-foreground antialiased flex flex-col"
  >
    <slot />
  </body>
</html>
